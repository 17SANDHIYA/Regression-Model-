from keras.models import Sequential
from keras.layers import Embedding, SimpleRNN, Dense
from keras.preprocessing.text import Tokenizer
from keras.preprocessing.sequence import pad_sequences

# Sample sentences
texts = ["I love this movie", "This film was terrible"]

# Labels: 1 = positive, 0 = negative
labels = [1, 0]

# Convert words to numbers
tokenizer = Tokenizer()
tokenizer.fit_on_texts(texts)
X = tokenizer.texts_to_sequences(texts)
X = pad_sequences(X, maxlen=5)

# Build RNN model
model = Sequential()
model.add(Embedding(input_dim=50, output_dim=8, input_length=5))
model.add(SimpleRNN(10))
model.add(Dense(1, activation='sigmoid'))

model.compile(optimizer='adam', loss='binary_crossentropy', metrics=['accuracy'])

# Train
model.fit(X, labels, epochs=5)

# Predict sentiment
test = ["I hated the movie"]
seq = tokenizer.texts_to_sequences(test)
seq = pad_sequences(seq, maxlen=5)

print("Sentiment:", model.predict(seq))
